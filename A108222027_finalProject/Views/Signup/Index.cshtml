@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form-inline" style="" method="post" action="@Url.Action("Submit")">
    <div class="py-5 ">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <form class="">
                        <div class="form-group">
                            <label>姓名</label>
                            <input type="Name" class="form-control" placeholder="Name" name="name">
                        </div>
                        <div class="form-group">
                            <label>電話</label>
                            <input type="Phone" class="form-control" placeholder="(+86)09xxxxxxx" name="phone">
                            <small class="form-text text-muted">*只限台灣門號</small>
                        </div>
                        <div class="form-group">
                            <label>住址</label>
                            <input type="Address" class="form-control" placeholder="Address" name="address">
                        </div>
                        <div class="form-group">
                            <label>密碼</label>
                            <input type="password" class="form-control" placeholder="Password" name="password">
                        </div>

                        <small class="text-info text-center"><a href="/Login/Index">已經有賬號了？點我登錄</a></small>
                        <br>
                        <input type="submit" class="btn mt-4 btn-block btn-outline-primary p-2 " value="Submit " />
                        @*<button type="button" class="btn mt-4 btn-block btn-outline-primary p-2" onclick="location.href='@Url.Action("Submit")'">Submit</button>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>