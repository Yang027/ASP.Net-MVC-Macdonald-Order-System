@*@{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@



<form method="post" action="@Url.Action("Index")">
    <span class="border border-light">
        <div class="text-center text-warning">
            <h1>會員賬號登錄</h1>
        </div>
        <div class="py-5" style="align-self:center" >
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form style="align-self:center">
                            <div class="form-group">
                                <label>賬號</label>
                                <input type="text" class="form-control" name="inputmailinline" placeholder="Account">
                            </div>
                            <br>
                            <div class="form-group">
                                <label>密碼</label>
                                <input type="password" class="form-control" name="inputpasswordinline" placeholder="Password">

                            </div>
                            <p class="text-danger">@ViewBag.Err</p>
                            <p> <small class="text-info text-center"><a href="/Signup/Index">還沒賬號？點我註冊</a></small> </p>
                            <!-- <a class="btn mt-4 btn-block btn-outline-primary p-2 " id="__submit"  >Log in</a> -->
                            <input type="submit" class="btn mt-4 btn-block btn-outline-primary p-2 " value="Log in " />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </span>



</form>



<script src="~/Scripts/mcdonalds.js"></script>
