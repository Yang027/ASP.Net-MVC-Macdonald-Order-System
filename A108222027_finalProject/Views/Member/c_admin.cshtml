@*促銷設定*@
<div id="" class="tabcontent">
    <h3>營銷記錄</h3>
    <div class="row">
        @*加入折扣的幾點：
            1.給Discount 優惠代碼
            2.money折抵的錢
            3.noob(1 or 2)是給第一次用還是
            4.discribe 對折扣的描述
            5.limit 折扣的限制 ex: 抵消150 折50
        *@
        <form class="form-inline" style="" method="post" action="@Url.Action("addDiscount","Member")">
            <table width="100%">
                <tr>
                    <th>優惠代碼</th>
                    <th>折抵金額</th>
                    <th>第一次購買限定</th>
                    <th>折價券功能描述</th>
                    <th>低消金額</th>
                    <th></th>
                </tr>
                <tr>
                    <th><input type="text" name="discount" placeholder="優惠代碼"></th>
                    <th><input type="text" name="money" placeholder="折抵金額"></th>
                    <th><input type="text" name="dd" placeholder="1為第一次購買限定，2為所有人都可以用">@*看要不要用 radio button*@</th>
                    <th><input type="text" name="discribe" placeholder="描述"></th>
                    <th><input type="text" name="limit" placeholder="低消金額"></th>
                    <th><input type="submit" class="btn-sm  btn  btn-block btn-primary p-2" value="添加"></th>
                </tr>
            </table>
        </form>
    </div>
    <br>
    <p>
        <h3>現有的折價券</h3>
    </p>
    @if (ViewBag.discount != null)
    {
        <div class="row">
            <table border="0" width="90%">
                <tr>
                    <th style="text-emphasis-color:aquamarine">序號</th>
                    <th style="text-emphasis-color:aquamarine">代碼</th>
                    <th style="text-emphasis-color:aquamarine">折抵金額</th>
                    <th style="text-emphasis-color:aquamarine">低消限制</th>
                    <th style="text-emphasis-color:aquamarine">描述</th>
                    <th></th>
                    @*複製按鈕*@
                </tr>
                @for (int i = 0; i < ViewBag.discount.Count; i++)
                {
                    <tr>
                        <th>@ViewBag.discount[i].Id</th>
                        <th>@ViewBag.discount[i].Discount</th>
                        <th>@ViewBag.discount[i].money</th>
                        <th>@ViewBag.discount[i].limit</th>
                        <th>@ViewBag.discount[i].discribe</th>
                        <th><button class="btn-sm col-md-6 btn  btn-block btn-primary p-2" onclick="location.href = '@Url.Action("Del_Discount", "Member")?c=' + '@i'">刪除</button></th>
                    </tr>
                }
            </table>
        </div>
    }
</div>
