    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
</head>

<body style="padding-top:100px" class="">
    @RenderBody()
    <nav class="navbar navbar-light bg-light navbar-expand-md fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Images/mcdonalds.png" width="90px" alt="Brand"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar1"> <span class="navbar-toggler-icon"></span> </button>
        <div class="collapse navbar-collapse" id="navbar1">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">@*<a class="nav-link" href="/Home/Index">關於我們</a>*@</li>
                <li class="nav-item ">@*<a class="nav-link" href="/Home/Index">熱銷商品</a>*@</li>

                <li class="nav-item"><a class="nav-link" href="/Order/Index">商品</a></li>
               
            </ul>
        </div>
        <div class="collapse navbar-collapse text-center justify-content-end" id="navbar">
            <form class="form-inline mr-auto">
                <a href="@Url.Action("Index", "ShoppingCart")" class="navbar-brand">
                    <img src="~/Images/shoppingcart.png" alt="Brand" width="55">
                </a>
                <a class="navbar-brand" href="@Url.Action("Index", "Login")"><img src="~/Images/user.png" width="32px" alt="Brand"></a>
            </form>
            <form class="form-inline  ">
                <input class="form-control mr-2" type="text" placeholder="搜索">
            </form>
            <button class="btn btn-outline-primary" type="button">搜索</button>
        </div>
    </nav>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Macdonald For education </p>
        </footer>
    </div>

</body>

</html>